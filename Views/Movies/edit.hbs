{{> navbar}}
{{> notifications}}

<form class="text-center border border-light p-5" action="#" method="">
    <h1>Edit Movie</h1>
    {{#with movie}}
    <div class="form-group">
        <label for="title">Movie Title</label>
        <input type="text" class="form-control" placeholder="Movie Title" value="{{title}}" name="title" required>
    </div>
    <div class="form-group">
        <label for="description">Movie Description</label>
        <textarea class="form-control" placeholder="Movie Description..." name="description" required>{{description}}</textarea>
    </div>
    <div class="form-group">
        <label for="imageUrl">Image url</label>
        <input type="text" class="form-control" placeholder="Image Url" value="{{imageUrl}}" name="imageUrl" required>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    {{/with}}
</form>

{{>footer}}